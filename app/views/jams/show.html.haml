%p#notice= notice

.row
	= image_tag jam.cover_image, class: "pull-left"
	.album-meta
		%h5= jam.youtube_title
%hr
%table.table
	-jam.tracks.each do |t|
		%tr
			%td=t.track_number
			%td=t.start_time
			%td=t.end_time
			%td=t.name

#status-container
	- if jam.jam_zip_upload.url
		%a{ href: jam.jam_zip_upload.url }='Download'
	- else
		#status-display{ data: { jam_id: jam.id } }
			= svg 'loading'
			%p=I18n.t("statuses.#{jam.status}")