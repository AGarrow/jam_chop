%html
	%head
		= csrf_meta_tags
		%meta{name: "viewport", content: "width=device-width, initial-scale=1"}
		%meta{property: "og:title", content: "JamChop"}
		%meta{property: "og:image", content: image_url("og-img.png")}
		%meta{property: "og:description", content: "Turn youtube videos into customized mp3 albums with ease."}
		= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
		= javascript_include_tag 'application', 'data-turbolinks-track': 'reload'

		- if Rails.env.production?			
			%script{ src: "https://www.googletagmanager.com/gtag/js?id=UA-106993436-1" }
			%script
				window.dataLayer = window.dataLayer || [];
				function gtag(){dataLayer.push(arguments)};
				gtag('js', new Date());

				gtag('config', 'UA-106993436-1');
		%title
			JamChop

	%body
		= render partial: 'shared/header'
		.col-md-8.col-md-offset-2.col-xs-12{align: "center"}
			= yield
